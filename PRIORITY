#include<stdio.h>
int main(){
 int p,n[20],it[20],pri[20],wt[20],ct[20],i,j,awt,act,sum=0,s=0,temp;
 wt[0] = 0;
 printf("Enter number of persons : ");
 scanf("%d",&p);
 printf("Enter interview time : ");
 for(i=0;i<=p;i++){
 scanf("%d",&it[i]);
 }
 printf("Enter priorities : ");
 for(i=0;i<=p;i++){
 scanf("%d",&pri[i]);
 }
 printf("Enter process:");
 for(i=0;i<=p;i++){
 scanf("%d",&n[i]);
 }
 for(i=0;i<=p;i++){
 for(j=i+1;j<=p;j++){
 if(pri[i]>pri[j]){
 temp = pri[i];
 pri[i] = pri[j];
 pri[j] = temp;
 temp = it[i];
 it[i] = it[j];
 it[j] = temp;
 temp = n[i];
 n[i] = n[j];
 n[j] = temp;
 }
 
 }//Waiting time...
 wt[i] = it[i-1]+wt[i-1];
 wt[0] = 0;
 }
 for(i=0;i<=p;i++){
 sum = sum + wt[i];
 awt = sum/(p+1);
 }
 printf("\nAverage waiting time is : %d\n",awt);
 for(i=0;i<=p;i++){
 ct[i] = wt[i] + it[i];
 s = s+ct[i];
 }
 printf("process\tinterview time\tpriorities\twaiting time\tcompletion 
time\n");
 for(i=0;i<=p;i++){
 printf("%d\t\t%d\t\t%d\t\t%d\t\t%d\n",n[i],it[i],pri[i],wt[i],ct[i]);
 }
}
 
